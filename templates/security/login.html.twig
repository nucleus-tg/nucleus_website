{% extends 'safebase.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block stylesheets %}
<style>
    html,
    body {
        height: 100%;
    }

    body {
        display: -ms-flexbox;
        display: flex;
        -ms-flex-align: center;
        align-items: center;
        padding-top: 40px;
        padding-bottom: 40px;
        background-color: #f5f7fb;
        background: linear-gradient(to right, #89216B, #DA4453);
    }
</style>
{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-lg-4 offset-lg-4">
            <p class="text-center">
                <img src="{{ asset('img/avatar.jpeg') }}" class="rounded-circle" width="80" />
            </p>
            <h5 class="card-title font-regular pt-2 pb-3 text-white text-center">Authentification</h5>
            <h6 class="card-subtitle font-regular pb-3 text-white text-center">Connectez-vous à votre compte nucleus</h6>
            <div class="card">
                <div class="card-body">
                    <form method="post">
                        {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}
                        </div>
                        {% endif %}

                        {% if app.user %}
                        <div class="mb-3">
                            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                        </div>
                        {% endif %}
                        <div class="form-group">
                            <label for="inputEmail">Identifiant ou email</label>
                            <input type="email" value="{{ last_username }}" name="email" id="inputEmail"
                                class="form-control" placeholder="Votre adresse mail" required>
                        </div>
                        <div class="form-group">
                            <label for="inputPassword">Mot de passe</label>
                            <input type="password" name="password" id="inputPassword" class="form-control"
                                placeholder="Votre mot de passe" required>
                        </div>
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                        <div class="form-group">
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" name="_remember_me" id="defaultCheck1">
                                <label class="form-check-label" for="defaultCheck1">
                                    Se souvenir de moi
                                </label>
                            </div>
                        </div>

                        <button class="btn btn-success w-100" type="submit">
                            Connexion
                        </button>
                    </form>
                    <div class="row">
                        <div class="col py-2">
                            <a href="{{ path('app_register') }}" class="btn btn-primary w-100">Créer un compte</a>
                        </div>
                    </div>

                    <div class="text-center pt-2">
                        <a href="#">Mot de passe oublié</a>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
{% endblock %}